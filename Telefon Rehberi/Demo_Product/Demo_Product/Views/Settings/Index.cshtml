@model Demo_Product.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Profil Bilgileri Düzenleme Sayfası</h1>
<style>
    body {
        background: linear-gradient(0deg, rgba(255,255,255, 0.6), rgba(77, 196, 196, 0.6)), url(https://seeklogo.com/images/D/devlet_su_isleri-logo-1DE3FB1F15-seeklogo.com.png);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: auto;
        background-position: center;
        background-color: transparent;
    }
</style>
<form method="post">

    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    @Html.Label("Soyadınız")
    <input type="text" asp-for="SurName" class="form-control" />
    <br />

    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="Mail" class="form-control" />
    <br />

    @Html.Label("Telefon Numaranız")
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br />

    @Html.Label("Şifre")
    <input type="password" asp-for="Password" class="form-control" />
    <br />

    @Html.Label("Şifre Tekrar")
    <input type="password" asp-for="ConfirmPassword" class="form-control" />
    <br />
    <button class="btn btn-warning">Değişiklikleri Kaydet</button>
</form>
