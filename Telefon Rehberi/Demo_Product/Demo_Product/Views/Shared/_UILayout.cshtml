@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<!-- SOLID'e uygunluk için oluşturduğumuz Partial View'larımızı yeri geldikçe çağırıyoruz-->
<partial name="~/Views/Partials/Partial_Header.cshtml") />
<!-- UI Layout'umuz burada-->

<body>

    <partial name="~/Views/Partials/Partial_Navbar.cshtml" ) />
    <div id="layoutSidenav">
        <partial name="~/Views/Partials/Partial_Sidebar.cshtml" ) />
        <div id="layoutSidenav_content">
            <main>

                <div class="container-fluid px-4">

                    <!-- Burası content alanı hata vermemesi için renderbody ekledik
                    ve  c# kodlarımız buraya erişti-->
                    @RenderBody()
                </div>
                @await RenderSectionAsync("Scripts", required:false)
            </main>
            <partial name="~/Views/Partials/Partial_Footer.cshtml" ) />
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/startbootstrap-sb-admin-gh-pages/js/scripts.js"></script>
</body>
</html>