@model EntityLayer.Concrete.Job
@{
    ViewData["Title"] = "AddJob";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<style>
    body {
        background: linear-gradient(0deg, rgba(255,255,255, 0.6), rgba(77, 196, 196, 0.6)), url(https://seeklogo.com/images/D/devlet_su_isleri-logo-1DE3FB1F15-seeklogo.com.png);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: auto;
        background-position: center;
        background-color: transparent;
    }
</style>

<form method="post">
    @Html.Label("Departman Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Departman Ekle</button>
</form>



